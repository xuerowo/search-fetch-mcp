{
  "name": "search-fetch-mcp",
  "version": "1.0.0",
  "description": "MCP server providing web search and webpage fetching capabilities with DuckDuckGo search and intelligent webpage fetching",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "search-fetch-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/search-fetch-mcp.git"
  },
  "homepage": "https://github.com/your-username/search-fetch-mcp#readme",
  "bugs": {
    "url": "https://github.com/your-username/search-fetch-mcp/issues"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('dist/index.js', '755')\"",
    "dev": "bun --watch src/index.ts",
    "start": "bun run src/index.ts",
    "start:dist": "node dist/index.js",
    "test": "bun test",
    "lint": "bunx eslint src/ --cache --stats",
    "lint:fix": "bunx eslint src/ --fix --cache",
    "typecheck": "bunx tsc --noEmit",
    "format": "bunx prettier --write src/**/*.ts",
    "prepare": "npm run build",
    "prepack": "npm run build && npm run lint && npm run typecheck",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "keywords": [
    "mcp",
    "search",
    "fetch",
    "web-search",
    "duckduckgo",
    "webpage",
    "server"
  ],
  "author": "MCP Developer",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.1",
    "@mozilla/readability": "^0.6.0",
    "jsdom": "^24.1.3",
    "node-fetch": "^3.3.2",
    "playwright": "^1.53.2",
    "robots-parser": "^3.0.1",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
